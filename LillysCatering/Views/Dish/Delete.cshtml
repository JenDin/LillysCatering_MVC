@model LillysCatering.Models.Dish

@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-5 text-center mt-3 mb-4 fw-bold">Delete dish</h1>

<div class="container">
    <div class="row mx-auto col-md-6 col-lg-4 p-1">
        <div>
            <h2 class="details--title mb-1">@Html.DisplayNameFor(model => model.Title)</h2>
            <p>@Html.DisplayFor(model => model.Title)</p>
        </div>
        <hr class="divider mb-2" />
        <div>
            <h2 class="details--title mb-1">@Html.DisplayNameFor(model => model.Ingredients)</h2>
            <p>@Html.DisplayFor(model => model.Ingredients)</p>
        </div>
        <hr class="divider mb-2" />
        <div>
            <h2 class="details--title mb-1">@Html.DisplayNameFor(model => model.Title)</h2>
            <p>@Html.DisplayFor(model => model.Title)</p>
        </div>
        <hr class="divider mb-2" />

        <form asp-action="Delete" class="mt-2">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <div class="mt-2">
                <a asp-action="Index" class="crud--link">Back to the dish table</a>
            </div>
        </form>
    </div>
</div>


