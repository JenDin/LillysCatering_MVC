@model IEnumerable<LillysCatering.Models.Menu>

@{
    ViewData["Title"] = "Menus";
}

<h1 class="display-5 text-center mt-3 mb-4 fw-bold">Menus</h1>

<p>
    <a asp-action="Create" class="crud--link">Add new menu</a>
</p>
<table class="table border-dark table-responsive">
    <thead class="bg-dark text-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinGuestAmount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinGuestAmount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="crud--link">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="crud--link">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="crud--link">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
