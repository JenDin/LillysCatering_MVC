@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1 class="display-5 text-center mt-3 mb-4 fw-bold">Forgot your password?</h1>

<div class="container">
    <div class="row mx-auto col-md-4">
        <h2 class="sub--title">Please enter your email below</h2>
        @*<div class="col-md-4">*@
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-md form--btn p-2">Reset Password</button>
        </form>
    </div>
    </div>
    @*</div>*@

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
