@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="display-5 text-center mt-3 mb-4">Register new account</h1>

<div class="container">
    <div class="row">
        <section class="mx-auto col-10 col-md-8 col-lg-4 border border-dark p-4">
            <!-- Form -->
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-group mb-3">
                    <label asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" class="form-control border-dark" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger fs-small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.Password">Password</label>
                    <input asp-for="Input.Password" class="form-control border-dark" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger fs-small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control border-dark" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger fs-small"></span>
                </div>

                <button id="registerSubmit" type="submit" class="btn login-btn mt-1">
                    Register
                </button>
            </form>

        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
